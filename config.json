{
  "version": "2.0",
  "project": {
    "name": "Claude Code AutoPilot System",
    "description": "Claude Code CLI的自动驾驶系统 - 基于深度需求讨论的完全自动化执行系统",
    "created": "2025-10-14",
    "updated": "2025-10-15",
    "maintainer": "x-rush",
    "workflow_type": "autopilot_autonomous"
  },
  "paths": {
    "status_file": "ENHANCED_WORKFLOW_STATUS.json",
    "requirement_alignment_file": "REQUIREMENT_ALIGNMENT.json",
    "execution_plan_file": "EXECUTION_PLAN.json",
    "todo_tracker_file": "TODO_TRACKER.json",
    "execution_log": "ENHANCED_EXECUTION_LOG.md",
    "security_log": "SECURITY_LOG.md",
    "monitor_log": "MONITOR_LOG.md",
    "alert_history": "ALERT_HISTORY.md",
    "dashboard": "MONITOR_DASHBOARD.md",
    "health_log": "HEALTH_CHECK_LOG.md",
    "backup_dir": "BACKUPS",
    "recovery_points_dir": "RECOVERY_POINTS",
    "state_backups_dir": "STATE_BACKUPS",
    "error_reports_dir": "ERROR_REPORTS",
    "quality_reports_dir": "QUALITY_REPORTS",
    "logs_dir": "logs"
  },
  "execution": {
    "max_execution_hours": 24,
    "auto_confirm_enabled": true,
    "self_check_enabled": true,
    "deviation_correction_enabled": true,
    "safety_boundary_enabled": true,
    "auto_save_interval_seconds": 60,
    "progress_report_interval_seconds": 180,
    "quality_check_interval_seconds": 300,
    "pause_on_error": true,
    "confirmation_required": false
  },
  "safety": {
    "boundary_enabled": true,
    "allowed_root": "项目根目录自动检测",
    "dangerous_patterns_blocked": true,
    "security_log_enabled": true,
    "audit_trail_enabled": true,
    "operation_validation": true
  },
  "deep_discussion": {
    "enabled": true,
    "phases": [
      "core_objectives",
      "execution_details",
      "decision_points",
      "planning_generation"
    ],
    "estimated_duration_minutes": 20,
    "decision_point_identification": true,
    "preset_solutions_generation": true
  },
  "execution_planning": {
    "enabled": true,
    "todo_generation": true,
    "dependency_mapping": true,
    "acceptance_criteria_required": true,
    "self_checkpoints_required": true,
    "time_estimation": true,
    "quality_standards_definition": true
  },
  "monitoring": {
    "interval_seconds": 60,
    "alert_cooldown_seconds": 300,
    "task_timeout_threshold_seconds": 1800,
    "health_check_interval_seconds": 60,
    "log_rotation_size_bytes": 10485760,
    "max_log_files": 5,
    "progress_tracking_enabled": true,
    "quality_monitoring_enabled": true,
    "security_monitoring_enabled": true
  },
  "retry": {
    "max_total_retries": 10,
    "max_retry_per_task": 3,
    "delay_base_seconds": 30,
    "delay_max_seconds": 1800,
    "backoff_strategy": "exponential",
    "intelligent_retry": true,
    "error_classification": true
  },
  "thresholds": {
    "api_error_threshold": 5,
    "network_error_threshold": 3,
    "disk_usage_warning_percent": 90,
    "memory_usage_warning_percent": 90,
    "cpu_load_warning_threshold": 2.0,
    "task_completion_slow_threshold_hours": 2,
    "task_completion_slow_percent": 20,
    "quality_score_minimum": 7.0,
    "safety_violation_max_per_hour": 5
  },
  "network": {
    "ping_target": "google.com",
    "api_check_url": "https://api.openai.com",
    "connection_timeout_seconds": 5,
    "retry_timeout_seconds": 30
  },
  "quality": {
    "overall_score_weight": 40,
    "validation_pass_rate_weight": 30,
    "user_experience_weight": 20,
    "maintainability_weight": 10,
    "minimum_acceptable_score": 7.0,
    "auto_quality_assessment": true,
    "continuous_validation": true
  },
  "recovery": {
    "max_recovery_points": 20,
    "max_backups": 20,
    "auto_recovery_enabled": true,
    "recovery_point_retention_days": 30,
    "state_backup_enabled": true,
    "checkpoint_validation": true
  },
  "logging": {
    "level": "INFO",
    "format": "timestamp",
    "console_output": true,
    "file_output": true,
    "rotate_on_size": true,
    "rotate_on_startup": false,
    "structured_logging": true,
    "security_logging": true,
    "performance_logging": true
  },
  "notifications": {
    "enabled": false,
    "email": {
      "enabled": false,
      "smtp_server": "",
      "smtp_port": 587,
      "username": "",
      "password": "",
      "from_address": "",
      "to_addresses": []
    },
    "webhook": {
      "enabled": false,
      "url": "",
      "timeout_seconds": 10
    }
  },
  "features": {
    "autopilot_workflow": true,
    "deep_discussion": true,
    "execution_planning": true,
    "safety_boundary": true,
    "autonomous_execution": true,
    "intelligent_retry": true,
    "real_time_monitoring": true,
    "quality_assurance": true,
    "deviation_correction": true
  },
  "compatibility": {
    "claude_code_version": "latest",
    "supported_platforms": ["linux", "macos", "wsl"],
    "required_dependencies": ["jq", "curl", "bash"],
    "optional_dependencies": ["expect", "xdotool"]
  }
}